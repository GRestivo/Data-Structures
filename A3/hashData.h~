#ifndef HASHDATA_H
#define HASHDATA_H

#include "LinkedListAPI.h"


/**Struct for the hash table that holds the key and word data
 */
typedef struct hashData {
  char *word;
  int key;
} HashData;

/**Function that allocate memory for the hash data and sets the given parameters
 *@post dynamically allocated memory holding the given data
 *@param word is the word to be put in the dictionary
 *@param key is the number generated by hash function using the word
 */
HashData *createHashData (char *word, int key);

#endif
